<Page
    x:Class="DailyPoetry.SearchResultPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="using:DailyPoetry.ViewModel"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d"
    Background="White">
    
    <Page.Resources>
        <DataTemplate x:Name="FilterTemplate" x:DataType="viewmodel:FilterItem">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="92"/>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="64"/>
                </Grid.ColumnDefinitions>
                <ComboBox SelectedIndex="1" Grid.Column="0" Margin="12,6,0,0" Width="80">
                    <x:String>标题</x:String>
                    <x:String>内容</x:String>
                    <x:String>朝代</x:String>
                    <x:String>作者</x:String>
                </ComboBox>
                <AutoSuggestBox Grid.Column="1" Margin="12,6,0,0" Text="{x:Bind value, Mode=TwoWay}"></AutoSuggestBox>
                <Button Grid.Column="2" Margin="12,6,0,6" Background="White" Width="48">
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE711;"/>
                </Button>
            </Grid>
        </DataTemplate>
        <DataTemplate x:Name="PoetryItemTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0"
                           Grid.ColumnSpan="2"
                           Text="{Binding Name}" 
                           Margin="12,6,0,0"/>
                <TextBlock  Grid.Column="0" Grid.Row="1"
                            Text="{Binding Dynasty}" 
                            Margin="12,6,0,0"/>
                <TextBlock  Grid.Column="1" Grid.Row="1"
                            Text="{Binding AuthorName}" 
                            Margin="6,6,0,0"/>
            </Grid>
        </DataTemplate>
    </Page.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ListView Name="FiltersList" MaxHeight="120"
                    ItemsSource="{Binding FilterItems}"
                    ItemTemplate="{StaticResource FilterTemplate}"
                    Grid.Row="0" SelectionMode="None">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
            
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button Margin="12,6,0,0" Click="Button_Click">
                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE710;"/>
            </Button>
            <Button Background="CornflowerBlue" Margin="12,6, 0, 0">
                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE721;"/>
            </Button>
        </StackPanel>
 
        
        <!--<ScrollViewer Name="SearchResultList">
            
        </ScrollViewer>
        
        <ProgressRing Name="SearchRing" IsActive="False"/>-->
    </Grid>
</Page>
