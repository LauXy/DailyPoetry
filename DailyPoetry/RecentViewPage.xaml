<Page
    x:Class="DailyPoetry.RecentViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DailyPoetry"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:DailyPoetry.Models"

    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <DataTemplate x:DataType="data:RecentViewItem" x:Key="RecentViewDataTemplate">
            <StackPanel Orientation="Horizontal" Width="1920">
                <TextBlock Text="{x:Bind RecentViewId}"
                           VerticalAlignment="Center"
                           Margin="0,7,0,0"/>
                <AppBarToggleButton Name="{x:Bind RecentViewId}"
                                    Label="SymbolIcon"
                                    Width="30" 
                                    Height="30"
                                    Click="AppBarToggleButton_Click">
                    <AppBarToggleButton.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xEB51;"/>
                    </AppBarToggleButton.Icon>
                </AppBarToggleButton>


                <TextBlock FontSize="16" Text="{x:Bind Title}" 
                           FontWeight="Bold" 
                           Margin="8,6,0,0"
                           VerticalAlignment="Center"/>

                <StackPanel Orientation="Horizontal">
                    <TextBlock FontSize="14" 
                               Text="{x:Bind Poet}" 
                               Foreground="Gray" 
                               Margin="36,6,0,0" 
                               VerticalAlignment="Center"/>
                    <TextBlock FontSize="14" 
                               Text="{x:Bind Content}" 
                               Foreground="Gray" 
                               Margin="24,6,0,0" 
                               VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>

    <Pivot x:Name="rootPivot" Title="最近浏览" Margin="12,20,0,0" Foreground="Gray">
        <PivotItem Header="诗词">
            
            <StackPanel Orientation="Vertical">

                <StackPanel Orientation="Horizontal">
                    <Button Content="全部清空"
                                Name="DeleteButton"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                            Command="{Binding DeleteCommand}"
                                />

                </StackPanel>
                <!--ItemSource = x:Bind RecentViews-->
                <StackPanel  Name="panel1" >
                    <GridView ItemsSource="{Binding RecentViewItems }" 
                              IsItemClickEnabled="True" 
                              ItemClick="GridView_ItemClick"
                              ItemTemplate="{StaticResource RecentViewDataTemplate}"
                              Name="RecentViewGridView"
                              />
                </StackPanel>

            </StackPanel>
        </PivotItem>

        <PivotItem Header="好友动态">
            <StackPanel>
                <Image Source="/Assets/404.png"
                       Height="300"
                       Width="500"
                       Margin="0,36,0,0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />
                <TextBlock Text="404页面找不到了"
                           Foreground="Gray"
                           FontSize="48"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="前方施工，敬请期待"
                           Foreground="Gray"
                           FontSize="28"
                           Margin="0,24,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </PivotItem>
    </Pivot>


</Page>
